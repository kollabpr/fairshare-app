rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to APK files for download
    match /downloads/{fileName} {
      allow read: if true;
      allow write: if false;
    }

    // Default rules for other files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
